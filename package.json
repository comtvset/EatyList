{
  "name": "eaty-list-app",
  "version": "0.1.0",
  "private": true,
  "lint-staged": {
    "*.{tsx,ts}": [
      "prettier --write",
      "eslint --report-unused-disable-directives --max-warnings 0"
    ],
    "*.css": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.scss": [
      "stylelint --fix"
    ]
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format:fix": "npx prettier . --cache --write src/**/*.*",
    "ci:format": "prettier . --check",
    "prepare": "husky",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.1",
    "firebase": "^11.0.2",
    "firebase-admin": "^13.0.1",
    "next": "15.0.4",
    "next-intl": "^3.25.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.53.2",
    "sass": "^1.82.0",
    "sharp": "^0.33.5",
    "yup": "^1.5.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@svgr/webpack": "^8.1.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/node": "^20.17.9",
    "@types/react": "^18.3.14",
    "@types/react-dom": "^18.3.2",
    "eslint": "^8.57.1",
    "eslint-config-next": "15.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react-compiler": "^0.0.0-experimental-7c1344f-20241007",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.2",
    "stylelint": "^16.11.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "5.7.2"
  }
