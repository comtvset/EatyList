{
  "name": "eaty-list-app",
  "version": "0.1.0",
  "private": true,
  "lint-staged": {
    "*.{tsx,ts}": [
      "prettier --write",
      "eslint --report-unused-disable-directives --max-warnings 0"
    ],
    "*.css": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.scss": [
      "stylelint --fix"
    ]
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format:fix": "npx prettier . --cache --write src/**/*.*",
    "ci:format": "prettier . --check",
    "prepare": "husky",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
    "firebase": "^10.14.1",
    "firebase-admin": "^12.7.0",
    "next": "14.2.13",
    "next-intl": "^3.21.1",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.53.0",
    "sass": "^1.79.4",
    "yup": "^1.4.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@svgr/webpack": "^8.1.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8.57.1",
    "eslint-config-next": "14.2.13",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react-compiler": "^0.0.0-experimental-7c1344f-20241007",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "stylelint": "^16.9.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "5.5.3"
  }
}
